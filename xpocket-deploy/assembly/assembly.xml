<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>ear</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>xpocket</baseDirectory>
    <dependencySets>
        <dependencySet>
            <excludes>
                <exclude>com.perfma.xlab:xpocket-deploy</exclude>
                <exclude>com.perfma.xlab:xpocket-agent</exclude>
            </excludes>
            <outputDirectory>lib</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>com.perfma.xlab:xpocket-agent</include>
            </includes>
            <outputDirectory>agent</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>scripts</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>xpocket.bat</include>
                <include>xpocket.sh</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>config</directory>
            <outputDirectory>config</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>tools/windows</directory>
            <outputDirectory>tools/windows</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>tools/macosx</directory>
            <outputDirectory>tools/macosx</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>tools/linux</directory>
            <outputDirectory>tools/linux</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>plugins</directory>
            <outputDirectory>plugins</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>../LICENSE</source>
            <outputDirectory></outputDirectory>
        </file>
        <file>
            <source>../README</source>
            <outputDirectory></outputDirectory>
        </file>
    </files>
</assembly>